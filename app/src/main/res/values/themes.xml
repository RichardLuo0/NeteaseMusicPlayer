<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.MusicPlayer.AppBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Widget.MusicPlayer.RoundImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MusicPlayer.CornerSize50Percent
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MusicPlayer.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>